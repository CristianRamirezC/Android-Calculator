<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:rowCount="6"
    android:columnCount="4"
    android:background="@color/result_background"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_rowSpan="1"
        >
        <ScrollView
            android:id="@+id/svResult"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollHorizontally="false"
                    android:breakStrategy="high_quality"
                    android:gravity="bottom|end"
                    android:tag="tvResult"
                    android:text="0"
                    android:textColor="@color/button_text"
                    android:textSize="70sp"
                    android:maxLength="18"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!--Row 1 -->
    <android.widget.Button
        android:id="@+id/btnAc"
        android:tag="btnAc"
        android:text="AC"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:textSize="25dp"
        android:textColor="@color/button_text"
        android:background="@color/first_row_buttons"
        />
    <android.widget.ImageButton
        android:id="@+id/btnDelete"
        android:tag="btnDelete"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:src="@drawable/ic_backspace"
        android:textColor="@color/button_text"
        android:background="@color/first_row_buttons"
        />
    <android.widget.Button
        android:id="@+id/btnPercent"
        android:tag="btnPercent"
        android:text="%"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/first_row_buttons"
        />
    <android.widget.Button
        android:id="@+id/btnDivide"
        android:tag="btnDivide"
        android:text="/"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/operators"
        />

    <!--Row 2 -->

    <android.widget.Button
        android:id="@+id/btn7"
        android:tag="btn7"
        android:text="7"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btn8"
        android:tag="btn8"
        android:text="8"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btn9"
        android:tag="btn9"
        android:text="9"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btnMultiply"
        android:tag="btnMultiply"
        android:text="X"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/operators"
        />

    <!--Row 3 -->

    <android.widget.Button
        android:id="@+id/btn4"
        android:tag="btn4"
        android:text="4"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btn5"
        android:tag="btn5"
        android:text="5"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btn6"
        android:tag="btn6"
        android:text="6"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btnSubtract"
        android:tag="btnSubtract"
        android:text="-"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:background="@color/operators"
        android:textColor="@color/button_text"
        />

    <!--Row 4 -->

    <android.widget.Button
        android:id="@+id/btn1"
        android:tag="btn1"
        android:text="1"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btn2"
        android:tag="btn2"
        android:text="2"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btn3"
        android:tag="btn3"
        android:text="3"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btnAdd"
        android:tag="btnAdd"
        android:text="+"
        android:layout_row="4"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/operators"
        />
    <!--Row 5 -->

    <android.widget.Button
        android:id="@+id/btn0"
        android:tag="btn0"
        android:text="0"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="2"
        android:layout_rowSpan="1"
        android:layout_columnSpan="2"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btnComma"
        android:tag="btnComma"
        android:text=","
        android:layout_row="5"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:textColor="@color/button_text"
        android:background="@color/numbers_background"
        />
    <android.widget.Button
        android:id="@+id/btnEqualsTo"
        android:tag="btnEqualsTo"
        android:text="="
        android:layout_row="5"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:layout_margin="1dp"
        android:textSize="30dp"
        android:background="@color/operators"
        android:textColor="@color/button_text"
        />
</GridLayout>